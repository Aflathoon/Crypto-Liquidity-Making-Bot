extends layout/index

block content
  main
    section
      div.container-fluid
        div.row
          div.col-sm-12
            div.pull-right
              span.badge.badge-binance.pull-left.m-t-20LOG LOG IN
            h4.page-title Dashboard
        div.row
          div.col-xl-3.col-md-6
            div.card-box
              h4.header-title.mt-0.m-b-30 #1
              div.widget-chart-1
                div.widget-detail-1
                  h2.p-t-10.mb-0
                  p.text-muted.m-b-10
          div.col-xl-3.col-md-6
            div.card-box
              h4.header-title.mt-0.m-b-30 #2
              div.widget-chart-1
                div.widget-detail-1
                  h2.p-t-10.mb-0
                  p.text-muted.m-b-10
          div.col-xl-3.col-md-6
            div.card-box
              h4.header-title.mt-0.m-b-30 #3
              div.widget-chart-1
                div.widget-detail-1
                  h2.p-t-10.mb-0
                  p.text-muted.m-b-10
          div.col-xl-3.col-md-6
            div.card-box
              h4.header-title.mt-0.m-b-30 #4
              div.widget-chart-1
                div.widget-chart-box-1
                div.widget-detail-1
                  h2.p-t-10.mb-0
                  p.text-muted.m-b-10
        div.row
          div.col-sm-8
            each exchange in exchanges
              each pair in exchange.pairs
                diw.row
                  div.col-sm-12
                    div.card-box
                      h4.header-title.mt-0.m-b-0 !{exchange.name}: !{pair.name} #!{pair.id}
                      div.row.mt-0.m-b-0
                        span.badge.badge-binance.pull-left.m-b-10 Today profit:
                        span.badge.badge-dark.badge-pill.pull-left.m-b-10( id="dailyProfit_" + exchange.name + "_" + pair.name + "_" + pair.id )
                        span.badge.badge-binance.pull-left.m-b-10 Total size:
                        span.badge.badge-dark.badge-pill.pull-left.m-b-10( id="totalSize_" + exchange.name + "_" + pair.name + "_" + pair.id )
                        span.badge.badge-binance.pull-left.m-b-10 Amount spent:
                        span.badge.badge-dark.badge-pill.pull-left.m-b-10( id="amountSpent_" + exchange.name + "_" + pair.name + "_" + pair.id )
                        span.badge.badge-binance.pull-left.m-b-10 Actual rate:
                        span.badge.badge-dark.badge-pill.pull-left.m-b-10( id="rateBid_" + exchange.name + "_" + pair.name + "_" + pair.id )
                        span.badge.badge-dark.badge-pill.pull-left.m-b-10( id="rateAsk_" + exchange.name + "_" + pair.name + "_" + pair.id )
                      div.table-responsive
                        table.table.mb-0
                          thead
                            tr
                              th BUY ID
                              th BUY PRICE
                              th SELL SIZE
                              th SELL TARGET PRICE
                              th AMOUNT SPENT
                              th P&L
                              th Action
                          tbody( id="tbody_" + exchange.name + "_" + pair.name + "_" + pair.id)
          div.col-sm-4
            div.card-box
              h4.header-title.mt-0 Last closed trades
              div.inbox-widget.nicescroll
                div.inbox-item
                div.inbox-item
                  p.inbox-item-text
                    a.nav-link.text-sm-left(href="https://www.binance.com/?ref=11012917", rel="nofollow", target="_blank")
                      | B
                div.inbox-item
                  p.inbox-item-text
                    a.nav-link.text-sm-left(href="https://coinfalcon.com/?ref=CFJSNZWGJDJJ", rel="nofollow", target="_blank")
                      | C
                  ul
                    li 1
                    li 2
                    li 3